{
  "compilerOptions": {
    "composite": true,
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2017"],
    "baseUrl": ".",
    "paths": {
      "*": ["types/*"]
    },
    "noEmit": true,
    "types": ["node", "jest"]
  },
  "include": ["**/__tests__/*"]
}
